generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// ============ AUTHENTICATION ============

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  comments      Comment[]
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())

  // My World relations
  dailyEntries    DailyEntry[]
  mapLocations    MapLocation[]
  trips           Trip[]
  calendarEvents  CalendarEvent[]
  todos           Todo[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============ ANALYTICS ============

model DailyVisit {
  id        String   @id @default(cuid())
  date      DateTime @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PageView {
  id          String   @id @default(cuid())
  path        String
  slug        String?
  visitorHash String?  // Hash of IP + User Agent for deduplication
  userAgent   String?
  referer     String?
  createdAt   DateTime @default(now())
  date        DateTime

  @@index([visitorHash, path, date]) // Index for deduplication queries
  @@index([date])
  @@index([slug])
}

// ============ COMMENTS ============

model Comment {
  id        String    @id @default(cuid())
  content   String
  postSlug  String
  authorId  String
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  parentId  String?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([postSlug])
  @@index([authorId])
}

// ============ SUBSCRIPTIONS ============

model EmailSubscription {
  id               String    @id @default(cuid())
  email            String    @unique
  isVerified       Boolean   @default(false)
  verifyToken      String?   @unique
  unsubscribeToken String    @unique @default(cuid())
  createdAt        DateTime  @default(now())
  lastNotified     DateTime?
}

model PushSubscription {
  id        String   @id @default(cuid())
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
}

// ============ OWNER STATUS ============

model OwnerStatus {
  id        String   @id @default("owner-status")
  app       String?  // Current app name (e.g., "Visual Studio Code")
  activity  String?  // Activity description (e.g., "Coding")
  emoji     String?  // Optional emoji
  isOnline  Boolean  @default(false)
  updatedAt DateTime @updatedAt
}

// ============ SECTIONS ============

model Section {
  id          String     @id @default(cuid())
  title       String
  description String?
  order       Int        @default(0)
  categories  Category[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

// ============ CATEGORIES ============

model Category {
  id        String     @id @default(cuid())
  name      String
  slug      String     @unique
  parentId  String?
  parent    Category?  @relation("CategoryChildren", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryChildren")
  sectionId String?
  section   Section?   @relation(fields: [sectionId], references: [id])
  order     Int        @default(0)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([parentId])
  @@index([sectionId])
}

// ============ POST TEMPLATES ============

model PostTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  category    String?
  tags        String[] @default([])
  content     String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============ SIKK SECTIONS ============

model SikkSection {
  id          String         @id @default(cuid())
  title       String
  description String?
  order       Int            @default(0)
  categories  SikkCategory[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

// ============ SIKK CATEGORIES ============

model SikkCategory {
  id        String         @id @default(cuid())
  name      String
  slug      String         @unique
  parentId  String?
  parent    SikkCategory?  @relation("SikkCategoryChildren", fields: [parentId], references: [id])
  children  SikkCategory[] @relation("SikkCategoryChildren")
  sectionId String?
  section   SikkSection?   @relation(fields: [sectionId], references: [id])
  order     Int            @default(0)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@index([parentId])
  @@index([sectionId])
}

// ============ SIKK POSTS ============

model SikkPost {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?
  content     String   // MDX content
  category    String?  // Category path (e.g., "성신여자대학교/1번")
  tags        String[] @default([])
  thumbnail   String?  // Banner/Thumbnail image URL
  isPublic    Boolean  @default(true)
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([date])
  @@index([isPublic])
}

// ============ BLOG POSTS ============

model BlogPost {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?
  content     String   // MDX content
  category    String?  // Category path (e.g., "개발/React")
  tags        String[] @default([])
  thumbnail   String?  // Thumbnail image URL
  isPublic    Boolean  @default(true)
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([date])
  @@index([isPublic])
}

// ============ MY WORLD - DAILY TRACKER ============

model DailyEntry {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime

  // 상태
  status    String?  // "완료", "진행중", "미완료"
  weather   String?  // 이모지
  condition String?  // "좋음", "보통", "나쁨"

  // 건강
  sleepHours Float?
  water      Int?
  coffee     Int?
  medicine   Boolean  @default(false)
  headache   Boolean  @default(false)
  period     Boolean  @default(false)

  // 식사
  breakfast String?
  lunch     String?
  dinner    String?
  snack     String?

  // 재정
  income      Int @default(0)
  expense     Int @default(0)
  expenseNote String?

  // 감정 (0-10 스케일)
  joy        Int @default(0)
  depression Int @default(0)
  anxiety    Int @default(0)
  sadness    Int @default(0)
  fatigue    Int @default(0)
  focus      Int @default(0)

  // 총점
  dayScore Int?

  // 메모
  notes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

// ============ MY WORLD - MAP LOCATIONS ============

model MapLocation {
  id        String @id @default(cuid())
  userId    String

  name      String
  address   String?
  latitude  Float
  longitude Float

  category String   // "맛집", "카페", "여행지", "숙소" 등
  tags     String[] @default([])

  rating    Int?      // 1-5
  visitDate DateTime?
  notes     String?
  photos    String[]  @default([])

  isPublic  Boolean @default(false)
  shareCode String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tripDays TripDay[]

  @@index([userId, category])
}

// ============ MY WORLD - TRIPS ============

model Trip {
  id          String   @id @default(cuid())
  userId      String

  name        String
  description String?
  startDate   DateTime
  endDate     DateTime

  status String @default("planned") // "planned", "ongoing", "completed"
  budget Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  days TripDay[]

  @@index([userId, startDate])
}

model TripDay {
  id        String   @id @default(cuid())
  tripId    String
  dayNumber Int
  date      DateTime

  notes String?

  trip      Trip          @relation(fields: [tripId], references: [id], onDelete: Cascade)
  locations MapLocation[]

  @@index([tripId])
}

// ============ MY WORLD - CALENDAR ============

model CalendarEvent {
  id          String    @id @default(cuid())
  userId      String

  title       String
  description String?
  date        DateTime
  endDate     DateTime?

  type     String?  // "일정", "기념일", "생일" 등
  color    String?  // hex color
  location String?  // 장소
  url      String?  // 관련 URL

  isAllDay Boolean @default(true)
  reminder Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

// ============ ABOUT PAGE DATA ============

model AboutData {
  id        String   @id @default("about-data")
  data      Json     // Store all about page data as JSON
  updatedAt DateTime @updatedAt
}

// ============ MY WORLD - TODO LIST ============

model Todo {
  id        String   @id @default(cuid())
  userId    String

  content   String
  completed Boolean  @default(false)
  status    String   @default("not_started") // "not_started", "in_progress", "completed"
  category  String   // "personal" or "research"
  date      DateTime // 해당 할일의 날짜

  order     Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date, category])
}
